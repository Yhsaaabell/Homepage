<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lexend"
                android:text="Recommend App"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/lexend"
                android:text="Recommend PlantaFarm app to your friends and others."
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editBox_des"
                android:background="@drawable/custom_edit_text"
                android:hint="Link will appear here."
                android:textColorHint="@color/black"
                android:fontFamily="@font/lexend"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="15dp"
                android:enabled="false"
                android:gravity="top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnCopy"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:text="Copy Link"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/green" />
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_button_border_green"
                    android:fontFamily="@font/lexend"
                    android:foreground="@drawable/custom_button_border_green"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white" />
            </LinearLayout>







        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>